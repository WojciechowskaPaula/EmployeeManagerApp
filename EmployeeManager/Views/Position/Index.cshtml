@model IEnumerable<EmployeeManager.Models.Position>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddNewPositionForm">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPosition", new { positionId = item.PositionId }) |
                @Html.ActionLink("Details", "DisplayPositionDetails", new { positionId = item.PositionId}) |
                @Html.ActionLink("Delete", "DeleteAndConfirm", new { positionId = item.PositionId })
            </td>
        </tr>
}
    </tbody>
</table>
