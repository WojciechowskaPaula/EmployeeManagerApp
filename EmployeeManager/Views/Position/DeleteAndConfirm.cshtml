@model EmployeeManager.Models.ViewModels.PositionDetailsVM

@{
    ViewData["Title"] = "Delete Position";
}

<h1>Position Details</h1>
<br />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PositionId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PositionId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PositionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PositionName)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post" asp-route-positionId="@Model.PositionId">
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
